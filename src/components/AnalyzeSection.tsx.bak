}

interface ChatMsg { role: "user" | "assistant"; content: string; }

function AiChatPanel({ result }: { result: AnalysisResult | null }) {
  const [messages, setMessages] = useState<ChatMsg[]>([{
    role: "assistant",
    content: result
      ? `‚úÖ Analysis complete for **${result.region}**! NDVI: ${result.ndvi} (${result.ndviCategory}). Ask me anything ‚Äî deforestation risks, climate trends, crop recommendations.`
      : "üëã Hi! I'm EcoScan AI. Run an analysis first, then ask me anything about the satellite results.",
  }]);
  const [input, setInput] = useState("");
  const [thinking, setThinking] = useState(false);
  const bottomRef = useRef<HTMLDivElement>(null);

  useEffect(() => { bottomRef.current?.scrollIntoView({ behavior: "smooth" }); }, [messages]);

  useEffect(() => {
    if (result) {
      setMessages(prev => [...prev, {
        role: "assistant",
        content: `üõ∞Ô∏è New data for **${result.region}**!\nNDVI: **${result.ndvi}** (${result.ndviCategory}) | Forest: **${result.landUse.forest}%** | Change: **${result.changePercent > 0 ? "+" : ""}${result.changePercent}%**${result.alerts.length > 0 ? `\n‚ö†Ô∏è ${result.alerts.length} alert(s) detected!` : "\n‚úÖ No critical alerts."}`,
      }]);
    }
  }, [result]);

  const send = async () => {
    if (!input.trim() || thinking) return;
    const userMsg: ChatMsg = { role: "user", content: input };
    setMessages(prev => [...prev, userMsg]);
    setInput("");
    setThinking(true);
    try {
      const context = result ? `Satellite analysis data: Region: ${result.region}, Coordinates: ${result.coordinates.lat}¬∞N ${result.coordinates.lon}¬∞E, NDVI: ${result.ndvi} (${result.ndviCategory}), Land Use: Forest ${result.landUse.forest}%, Agriculture ${result.landUse.agriculture}%, Urban ${result.landUse.urban}%, Water ${result.landUse.water}%, Change: ${result.changePercent}%, Alerts: ${result.alerts.map(a => a.message).join("; ") || "None"}` : "No analysis data yet.";
      const resp = await fetch("/api/chat", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: input, context, history: messages.slice(-6) }),
      });
      const data = await resp.json();
      setMessages(prev => [...prev, { role: "assistant", content: data.reply || "Sorry, try again." }]);
    } catch {
      setMessages(prev => [...prev, { role: "assistant", content: "‚ö†Ô∏è Connection error. Check HUGGINGFACE_API_KEY in .env.local" }]);
    } finally {
      setThinking(false);
    }
  };

  const quickQ = result
    ? ["Main risks?", "Explain NDVI", "Deforestation forecast", "Best crops here?", "Climate impact"]
    : ["What is NDVI?", "How does it work?", "What can EcoScan detect?"];

  return (
    <div className="flex flex-col h-full">
      <div className="flex-1 overflow-y-auto space-y-3 pr-1 mb-3" style={{ maxHeight: "310px" }}>
        {messages.map((msg, i) => (
          <div key={i} className={`flex gap-2 ${msg.role === "user" ? "flex-row-reverse" : ""}`}>
            <div className={`w-7 h-7 rounded-full flex-shrink-0 flex items-center justify-center text-xs ${msg.role === "assistant" ? "bg-cyan-500/20 text-cyan-400" : "bg-purple-500/20 text-purple-400"}`}>
              {msg.role === "assistant" ? "ü§ñ" : "üë§"}
            </div>
            <div className={`max-w-[85%] px-3 py-2 rounded-xl text-xs leading-relaxed ${msg.role === "assistant" ? "bg-[#111827] border border-gray-800 text-gray-300" : "bg-cyan-500/10 border border-cyan-500/20 text-cyan-100"}`}>
              {msg.content.split("\n").map((l, j) => <span key={j}>{l.replace(/\*\*(.*?)\*\*/g, "$1")}{j < msg.content.split("\n").length - 1 && <br />}</span>)}
            </div>
          </div>
        ))}
        {thinking && (
          <div className="flex gap-2">
            <div className="w-7 h-7 rounded-full bg-cyan-500/20 flex items-center justify-center text-xs">ü§ñ</div>
            <div className="px-3 py-2 rounded-xl bg-[#111827] border border-gray-800">
              <div className="flex gap-1">{[0,1,2].map(i => <div key={i} className="w-1.5 h-1.5 rounded-full bg-cyan-400 animate-bounce" style={{ animationDelay: `${i*150}ms` }} />)}</div>
            </div>
          </div>
        )}
        <div ref={bottomRef} />
      </div>
      <div className="flex flex-wrap gap-1.5 mb-3">
        {quickQ.map(q => (
          <button key={q} onClick={() => setInput(q)} className="px-2 py-1 rounded-lg text-xs border border-gray-700 text-gray-400 hover:border-cyan-500/40 hover:text-cyan-400 transition-all">{q}</button>
        ))}
      </div>
      <div className="flex gap-2">
        <input value={input} onChange={e => setInput(e.target.value)} onKeyDown={e => e.key === "Enter" && send()}
          placeholder="Ask anything about this region..." className="flex-1 px-3 py-2 bg-[#0a0e1a] border border-gray-700 hover:border-cyan-500/40 focus:border-cyan-500 focus:outline-none rounded-xl text-white text-xs placeholder-gray-600 transition-colors" />
        <button onClick={send} disabled={!input.trim() || thinking} className="px-3 py-2 rounded-xl btn-primary disabled:opacity-50">
          <Send className="w-4 h-4" />
        </button>
      </div>
    </div>
  );
}

function LiveTicker() {
  const events = [
    "üî• Fire detected ‚Äî Amazon Basin, Brazil",
    "üåä Flood risk rising ‚Äî Bangladesh delta +15%",
    "üå± Kazakhstan cropland NDVI improving",
    "üå≤ Deforestation alert ‚Äî Borneo, Indonesia",
    "üíß Aral Sea water level change detected",
    "‚ö†Ô∏è Drought stress ‚Äî Horn of Africa",
  ];
  const [idx, setIdx] = useState(0);
  useEffect(() => { const t = setInterval(() => setIdx(i => (i + 1) % events.length), 3000); return () => clearInterval(t); }, []);
  return (
    <div className="flex items-center gap-3 px-4 py-2.5 bg-[#0a0e1a] border border-orange-500/20 rounded-xl">
      <span className="text-xs text-orange-400 font-mono font-bold flex-shrink-0 flex items-center gap-1">
        <Activity className="w-3.5 h-3.5" /> LIVE
      </span>
      <span className="w-1 h-1 rounded-full bg-orange-400 animate-pulse flex-shrink-0" />
      <span className="text-xs text-gray-400 truncate">{events[idx]}</span>
    </div>
  );
}

